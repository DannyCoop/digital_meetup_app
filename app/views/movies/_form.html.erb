      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
        <% movie.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label 'Time (format: YYYY-MM-DD HH:MM:SS)' %>
    <%= f.text_field :time %>
  </div>

  <div class="field">
    <%= f.label :max_guests %>
    <%= f.number_field :max_guests %>
  </div>

  <div class="field">
    <%= f.hidden_field :user_id, :value => session[:user_id] %>
  </div>

  <div class="field">
    <%= f.label 'Image Url (optional)' %>
    <%= f.text_field :img_url %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
