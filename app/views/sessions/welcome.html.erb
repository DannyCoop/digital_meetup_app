<section class="box">   
    <h1 id="title">Welcome</h1>
    <div id= "subtitle">
        <% if logged_in? %>

            <h1> You are Logged In, <%= current_user.name %>.</h1>
            <p id="subtitle"> You can now browse events, sign up for upcoming events, and create your own events!</p>
        <% else %>

            <%= link_to "Login", '/login', method: :get %>
            <%= link_to "Sign Up", '/users/new', method: :get %>
        <% end %>
    </div>
</section>